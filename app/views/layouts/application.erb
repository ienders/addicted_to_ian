		    <% [ ['words', '/' ], [ 'pictures', '/pictures' ], [ 'plugs', '/plugs' ], [ 'links', '/links' ] ].each do |nav| %>	    
          <div id = "<%= nav[0] %>"><%= link_to(image_tag('nav_'+ nav[0] + '_off.png'), nav[1]) %></div>
        <% end %>
		  </div>
  	</div>
	</div>
	<div id="main">
	  <div class="content_holder">
	    <%= yield %>
	    <%= yield :widgets %>
    </div>
	</div>
  <div id="footer">
