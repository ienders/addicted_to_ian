<div class = "bordered">
  <h1>Enter Your Login:</h1>

  <% form_tag accounts_path, :method => :post do -%>
    <div class = "input"><div class = "label">Login:</div><div class = "field"><%= text_field_tag 'login' %></div></div>
    <div class = "input"><div class = "label">Password:</div><div class = "field"><%= password_field_tag 'password' %></div></div>

    <br class = "clear" />

    <%= submit_tag 'Log in' %>
  <% end -%>
</div>

<br class = "clear" />