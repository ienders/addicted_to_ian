<% form_for(obj, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  
  <h4>Title:</h4>
  <p><%= f.text_field :title %></p>

  <h4>URL:</h4>
  <p><%= f.text_field :url %></p>
  
  <h4>Description:</h4>
  <p><%= f.text_area :description, :rows => 30, :cols => 80 %></p>
  
  <h4>Image:</h4>
  <p><%= file_field_tag("plug[attachable][0][uploaded_data]", :size => 60) %></p>
  
  <%= f.submit "Save" %>
<% end %>